{
  "name": "start-browserify-project",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/suxxus/start-browserify-project.git"
  },
  "author": "suxxus",
  "license": "ISC",
  "literalify": {},
  "description": "browserify project starter",
  "scripts": {
    "browsersync": "node browser-sync",
    "build:js": "NODE_PATH=src  browserify -t browserify-handlebars -d -t babelify -t literalify src/scripts/index.js > ./build/bundle.js",
    "build:markup": "cat src/*.html > build/index.html",
    "build:css": "postcss -c postcssconfig.json",
    "build": "npm test -s & npm run lint -s & npm run build:js -s & npm run build:css -s & npm run build:markup -s",
    "check": "npm outdated --depth=0",
    "clean": "rm -rf ./build/* && rm -rf .tmp/*  && rm -rf ./dist/*",
    "dev": "watch -p 'src/**/*' -c 'npm run test & npm run lint'",
    "lint": "eslint --color  src || true",
    "start": "npm run build && npm run browsersync & watch -p 'src/**/*' -c 'npm run build'",
    "test": "NODE_PATH=src babel-node src/tests | tap-colorize",
    "uglify": "uglifyjs ./build/bundle.js --stats --mangle --output ./dist/bundle.js",
    "minify:html": "html-minifier --collapse-whitespace build/index.html -o  dist/index.html",
    "dist": "npm run lint & npm run test && npm run build && cat build/*.css | cleancss -o dist/main.css && npm run minify:html && npm run uglify",
    "prepublish:remove": "rm -rf ./build && rm -rf ./dist",
    "prepublish:create": "mkdir build && mkdir dist",
    "prepublish": "npm run prepublish:remove && npm run prepublish:create && npm run dist",
    "prebuild": "npm run clean -s",
    "update": "updtr"
  },
  "devDependencies": {
    "autoprefixer": "6.5.0",
    "autoprefixer-core": "6.0.1",
    "babel-cli": "6.16.0",
    "babel-eslint": "7.0.0",
    "babel-preset-es2015": "6.16.0",
    "babelify": "7.3.0",
    "browser-sync": "2.17.0",
    "browserify": "13.1.0",
    "browserify-handlebars": "1.0.0",
    "clean-css": "3.4.20",
    "eslint": "3.7.0",
    "eslint-cli": "1.1.0",
    "eslint-config-eslint": "3.0.0",
    "handlebars": "4.0.5",
    "html-minifier": "3.1.0",
    "literalify": "0.4.0",
    "mock": "0.1.1",
    "postcss": "5.2.4",
    "postcss-cli": "2.6.0",
    "sinon": "1.17.6",
    "tap-colorize": "1.2.0",
    "tape": "4.6.2",
    "uglify": "0.1.5",
    "updtr": "0.2.1",
    "watch-cli": "0.2.1"
  },
  "keywords": [
    "node",
    "project",
    "browserify"
  ]
}
