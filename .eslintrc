{
   "env":{
      "node":true,
      "browser":true,
      "es6":true
   },
   "extends":[
      "eslint:all",
      "plugin:import/errors",
      "plugin:import/warnings"
   ],
   "parser":"babel-eslint",
   "settings":{
      "import/resolver":{
         "node":{
            "paths":[
               "src"
            ],
            "extensions":[
               ".js",
               ".json"
            ]
         }
      },
      "import/ignore":[
         "node_modules",
         "\\.(coffee|scss|css|less|hbs|svg|json)$"
      ]
   },
   "plugins":[
      "eslint-plugin-import"
   ],
   "rules":{
      "quotes":[
         2,
         "single",
         "avoid-escape"
      ],
      "import/no-extraneous-dependencies":[
         "error",
         {
            "devDependencies":false,
            "optionalDependencies":false
         }
      ]
   }
}
